<div>
  <h1>NERT Forum</h1>

  <!-- ADD NEW POST DIV -->
  <div>
    <div class='toggle show'>
      <%= link_to 'Add Post', '#', class: 'toggle save show'%>
    </div>

    <div class='toggle hide'>
      <%= form_for @new_post do |f| %>

        <div>
          <p>
            Title: <%= f.text_field :title, placeholder: 'Post Title' %><br/>
            Post: <%= f.text_field :text_body, placeholder: 'What do you have to say?' %><br/>
          </p>
        </div>

        <div>
          <p><%= link_to 'Cancel', :back %></p>
          <p><%= f.submit 'Save Changes' %></p>
        </div>

      <% end %>
    </div>
  </div>
  <!-- END NEW POST DIV -->
  
  <!-- UPCOMING EVENTS -->
  <% @events.each do |event|%>
    <div style="border: 2px solid grey;">
      <p>
        <h3><%= link_to event.name, event_path(event) %></h3>
        <%= link_to event.owner.name, user_path(event.owner) %>: <%= event.owner.neighborhood %></br>
        <%= event.location %>
      </p>
      <p><%= event.description %></p>
    </div>
  <% end %>
  <!-- END UPCOMING EVENTS -->

  <!-- RECENT POSTS -->
  <% @posts.each do |post|%>
    <div>
      <p>
        <h3><%= link_to post.title, post_path(post) %></h3>
        <%= link_to post.owner.name, user_path(post.owner) %>: <%= post.owner.neighborhood %></br>
        <%= post.created_at %>
      </p>
      <p><%= post.text_body %></p>
      <hr>
    </div>
  <% end %>
  <!-- END RECENT POSTS -->

</div>