<!-- VOLUNTEERS -->
<div>
  <h3>Volunteers</h3>
  <% @users.each do |user|%>
    <div>
      <p>
        <%= link_to user.name, user_path(user), class: 'bigger' %></br>
        <%= link_to 'Delete User', user_path(user), method: :delete, :data => {:confirm => 'Are you sure you want to delete this User?'}, class: 'waves-effect waves-light btn' %>
      </p>
    </div>
  <% end %>
</div>
<!-- END VOLUNTEERS -->

<!-- FLAGGED POSTS -->
<% if @flagged_posts.count > 0 %>
  <div>
    <h3>Flagged Posts</h3>
    <% @flagged_posts.each do |post|%>
      <div>
        <p>
          <%= link_to post.title, post_path(post), class: 'bigger' %>
          <%= form_for post do |f| %>
            <%= f.hidden_field :flagged, :value => false %>
            <%= f.submit 'Unflag Post', class: 'waves-effect waves-light btn' %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
<!-- END FLAGGED POSTS -->

<!-- FLAGGED COMMENTS -->
<% if @flagged_comments.count > 0 %>
  <div>
    <h3>Flagged Comments</h3>
    <% @flagged_comments.each do |comment|%>
      <div>
        <p>
          <%= link_to comment.text_body[0...10], comment_path(comment), class: 'bigger' %>
          <%= form_for comment do |f| %>
            <%= f.hidden_field :flagged, :value => false %>
            <%= f.submit 'Unflag Post', class: 'waves-effect waves-light btn' %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
<!-- END FLAGGED COMMENTS -->
