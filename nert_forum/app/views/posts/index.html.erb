<div>

  <!-- ADD NEW POST DIV -->
  <div>
    <div class='post show'>
      <p><%= link_to 'Add Post', '#', class: 'event show toggle add_post show waves-effect waves-light btn'%></p>
    </div>

    <div class='post hide'>
      <%= form_for @new_post do |f| %>

        <div>
          <p>
            Title: <%= f.text_field :title, placeholder: 'Post Title' %><br/>
            Post: <%= f.text_field :text_body, placeholder: 'What do you have to say?' %><br/>
          </p>
        </div>

        <div>
          <p><%= link_to 'Cancel', posts_path, class: 'waves-effect waves-light btn' %></p>
          <p><%= f.submit 'Save Changes', class: 'waves-effect waves-light btn' %></p>
        </div>

      <% end %>
    </div>
  </div>
  <!-- END NEW POST DIV -->

  <!-- ADD NEW EVENT DIV -->
  <% if current_user === nil %>
  <% elsif current_user.admin %>
    <div>
      <div class='event show'>
        <p><%= link_to 'Add Event', '#', class: 'post show toggle add_event show waves-effect waves-light btn'%></p>
      </div>

      <div class='event hide'>
        <%= form_for @new_event do |f| %>

          <div>
            <p>
              Event Name: <%= f.text_field :name, placeholder: 'Event Title' %><br/>
              Location: <%= f.text_field :location, id: 'geo-input', placeholder: 'Location' %><br/>
              Description: <%= f.text_field :description, placeholder: 'What do you have to say?' %><br/>
              Event Image: <%= f.file_field :photo %><br />
            </p>
          </div>

          <div>
            <p><%= link_to 'Cancel', posts_path, class: 'waves-effect waves-light btn' %></p>
            <p><%= f.submit 'Save Changes', class: 'waves-effect waves-light btn' %></p>
          </div>

        <% end %>
      </div>
    </div>
  <% end %>
  <!-- END NEW EVENT DIV -->

  <!-- UPCOMING EVENTS -->
  <div class="row cards">
    <% @events.each do |event|%>
    <div class="col s12 m6">
      <div class="card hoverable">
        <div class="card-image">
          <%= image_tag event.photo.url(:medium) %>
          <span class="card-title"> <%= event.name%> </span>
        </div>
        <div class="card-content">
          
          <%= truncate(event.description, length: 150) %>
        </div>
        <div class="card-action">
          <%= link_to 'Read More', event_path(event) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <!-- END UPCOMING EVENTS -->

  <!-- RECENT POSTS -->
  <ul class="collapsible popout" data-collapsible="accordion">
  <% @posts.each do |post|%>
    <li>
      <div class="collapsible-header"><i class="material-icons">library_books</i>
        <%= link_to post.title, post_path(post), class: 'bigger-font' %></br>
        <%= link_to post.owner.name, user_path(post.owner) %>: <%= post.owner.neighborhood %></br>
          <%= post.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("Posted At: %m/%d/%Y %I:%M%p %Z") %>
      </div>
      <div class="collapsible-body">
        <p><%= truncate(post.text_body, length: 295) %> <%= link_to 'Read More', post_path(post) %></p>
      </div>
    </li>
  <% end %>
  <!-- END RECENT POSTS -->

</div>