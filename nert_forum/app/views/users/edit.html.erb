<%= form_for @user do |f| %>

  <div>
    <p>
      Name: <%= f.text_field :name %><br/>
      Neighborhood: <%= f.text_field :neighborhood %><br/>
      Profile Image: <%= f.file_field :photo %><br />
    </p>
  </div>

  <div>
    <p><%= link_to 'Cancel', user_path(@user), class: 'waves-effect waves-light btn' %></p>
    <p><%= f.submit 'Save Changes', class: 'waves-effect waves-light btn' %></p>
  </div>

<% end %>