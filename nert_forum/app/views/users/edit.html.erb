<%= form_for @user do |f| %>

  <div>
    <p>
      Name: <%= f.text_field :name %><br/>
      Image URL: <%= f.text_field :image %><br/>
      Neighborhood: <%= f.text_field :neighborhood %><br/>
    </p>
  </div>

  <div>
    <p><%= link_to 'Cancel', user_path(@user) %></p>
    <p><%= f.submit 'Save Changes' %></p>
  </div>

<% end %>