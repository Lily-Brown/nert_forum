<%= form_for @event do |f| %>

  <div>
    <p>
      Event Name: <%= f.text_field :name %><br/>
      Location: <%= f.text_field :location %><br/>
      Image URL: <%= f.text_field :image %><br/>
      Description: <%= f.text_field :description %><br/>
    </p>
  </div>

  <div>
    <p><%= link_to 'Cancel', :back %></p>
    <p><%= f.submit 'Save Changes' %></p>
  </div>

<% end %>