<%= form_for @event do |f| %>

  <div>
    <p>
      Event Name: <%= f.text_field :name %><br/>
      Location: <%= f.text_field :location, id: 'geo-input' %><br/>
      Description: <%= f.text_field :description %><br/>
      Event Image: <%= f.file_field :photo %><br />
    </p>
  </div>

  <div>
    <p><%= link_to 'Cancel', :back, class: 'waves-effect waves-light btn' %></p>
    <p><%= f.submit 'Save Changes', class: 'waves-effect waves-light btn' %></p>
  </div>

<% end %>